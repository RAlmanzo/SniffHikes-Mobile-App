<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MDE.Project.Rosseel_Almanzo.Pages.MainPage"
            xmlns:local="clr-namespace:MDE.Project.Rosseel_Almanzo.Pages"
            Title="Menu"
            NavigationPage.HasNavigationBar="False">
    <FlyoutPage.Flyout>
        <local:FlyoutMenuPage></local:FlyoutMenuPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <local:HomePage></local:HomePage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>
