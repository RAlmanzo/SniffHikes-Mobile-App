                        <Label Text="Welkom bij SniffHikes!" TextDecorations="Underline" FontSize="30" HorizontalOptions="CenterAndExpand" TextColor="{StaticResource border}" FontFamily="GrenzeGotisch-Regular.ttf"></Label>
                    </StackLayout>
